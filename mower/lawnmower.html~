<input type="range" min="0" max="100" step="1" 
  oninput="setVol(this.value)" onchange="setVol(this.value)"></input>
<script>
function setVol(val) {
  var auds = document.querySelectorAll("audio");
  for (var i = 0; i < auds.length; i++) {
    auds[i].volume = val/100.
  }
}
</script>
</body>
